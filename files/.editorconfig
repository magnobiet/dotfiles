root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = space

[*.blade.php]
indent_style = tab

[{.*,*.sh,*.json,.*rc,*.yml,*.yaml,*.conf,Vagrantfile}]
indent_style = space
indent_size = 2
